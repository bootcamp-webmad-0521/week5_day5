<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Registro</h1>

            <hr>

            <form action="/registro" method="POST">

                <div class="form-group">
                    <label for="username">Usuario</label>
                    <input type="text" class="form-control" name="username" id="username">
                </div>

                <div class="form-group">
                    <label for="pwd">Contraseña</label>
                    <input type="password" class="form-control" name="pwd" id="pwd">
                </div>

                <div class="form-group">
                    <label for="profileImg">Avatar (URL)</label>
                    <input type="text" class="form-control" name="profileImg" id="profileImg">
                </div>


                <div class="form-group">
                    <label for="description">¡Preséntate!</label>
                    <input type="text" class="form-control" name="description" id="description">
                </div>


                <button type="submit" class="btn btn-dark btn-block btn-lg">Registrarme</button>

            </form>
            {{#if errorMessage}}
            <div class="errorMessage">
                {{errorMessage}}</div>
            {{/if}}
        </div>

    </div>

</div>